<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bege">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_cadastro"
        android:layout_width="287dp"
        android:layout_height="269dp"
        android:src="@drawable/panda_cadastro"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="62dp"
        tools:layout_editor_absoluteY="486dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    </androidx.constraintlayout.widget.ConstraintLayout>




    </ScrollView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/editText_data_de_nascimento"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/bg_edit_normal"
        android:hint="@string/text_date_of_birth"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="@color/dark_purple"
        android:textColorHint="@color/dark_purple"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="181dp"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/editText_email_do_responsavel"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/bg_edit_normal"
        android:hint="@string/text_responsible_person_email"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="@color/dark_purple"
        android:textColorHint="@color/dark_purple"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="239dp" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/editText_nome_aluno"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/bg_edit_normal"
        android:hint="@string/text_name_student"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="@color/dark_purple"
        android:textColorHint="@color/dark_purple"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="115dp" />

    <TextView
        android:id="@+id/textView_serie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="340dp"
        android:text="@string/text_school_grade"
        android:textColor="@color/dark_purple"
        android:textSize="12sp"
        android:textStyle="italic|bold"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="300dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView_cadastro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_register"
        android:textColor="@color/dark_purple"
        android:textSize="30sp"
        android:textStyle="italic|bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_cadastro"
        android:layout_width="160dp"
        android:layout_height="48dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/bg_button_normal"
        android:letterSpacing="0.04"
        android:text="@string/text_conclude"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/image_cadastro"
        tools:layout_editor_absoluteX="125dp"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>