<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pink">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="186dp"
        android:layout_height="183dp"
        android:src="@drawable/logo"
        tools:layout_editor_absoluteX="112dp"
        tools:layout_editor_absoluteY="-3dp"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="397dp"
        android:layout_height="333dp"
        android:src="@drawable/margem"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="240dp"/>

    <TextView
        android:id="@+id/textView_assistir"
        android:layout_width="290dp"
        android:layout_height="44dp"
        android:text="@string/text_assistir"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="italic|bold"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="274dp"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_iniciar_atividade"
        android:layout_width="160dp"
        android:layout_height="48dp"
        android:background="@drawable/bg_button_normal"
        android:letterSpacing="0.04"
        android:text="@string/text_atividade"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="235dp"
        tools:layout_editor_absoluteY="598dp"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="291dp"
        android:layout_height="291dp"
        android:src="@drawable/soma"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="274dp"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>